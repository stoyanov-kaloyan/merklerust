{
    "name": "merklerust",
    "version": "0.0.1",
    "description": "Rust-powered Merkle trees & proofs for Node.js",
    "type": "module",
    "main": "./index.cjs",
    "module": "./index.js",
    "types": "./index.d.ts",
    "author": "Kaloyan Stoyanov",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/stoyanov-kaloyan/merklerust.git"
    },
    "exports": {
        "import": "./index.js",
        "require": "./index.cjs"
    },
    "files": [
        "index.js",
        "index.cjs",
        "index.d.ts",
        "README.md",
        "*.node"
    ],
    "scripts": {
        "build": "napi build --manifest-path crates/node/Cargo.toml --platform --js index.js --dts index.d.ts --esm --release --output-dir .",
        "test": "cargo test --manifest-path crates/core/Cargo.toml && cargo test --manifest-path crates/node/Cargo.toml && vitest run",
        "test:rust": "cargo test --manifest-path crates/core/Cargo.toml && cargo test --manifest-path crates/node/Cargo.toml",
        "test:js": "vitest run",
        "bench": "vitest bench"
    },
    "devDependencies": {
        "@fast-check/vitest": "^0.2.4",
        "@napi-rs/cli": "^3.5.1",
        "@openzeppelin/merkle-tree": "^1.0.0",
        "@types/node": "^25.0.3",
        "fast-check": "^4.5.3",
        "merkletreejs": "^0.4.0",
        "typescript": "^5.3.0",
        "vitest": "^4.0.16"
    }
}
